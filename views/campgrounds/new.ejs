<%- include ("../partials/header") %>



<div style="text-align: center">
    <h1>Create a new CampGround</h1>
    <form action="/campgrounds" method="post">
        <div class="form-group">
            <input class="form-control new" type="Text" name="name" placeholder="name">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="number" name="price" placeholder="price" min="0.01" step="0.01">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="Text" name="image" placeholder="image url">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="Text" name="description" placeholder="description">
        </div>
        <div class="form-group submitButton">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>

    <a class="goBack" href="/campgrounds">Go Back!!!</a>

</div>

