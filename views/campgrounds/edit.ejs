<div style="text-align: center">
    <h1>Edit <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
            <input class="form-control new" type="Text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="Text" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group new">
            <input class="form-control new" type="Text" name="campground[description]" value="<%= campground.description %>">
        </div>
        <div class="form-group submitButton">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>

    <a class="goBack" href="/campgrounds">Go Back!!!</a>

</div>



